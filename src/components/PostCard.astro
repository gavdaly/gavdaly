---
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  publishedAt: Date;
  description: string;
  slug: string;
};

const { title, publishedAt, description, slug } = Astro.props;
---

<a
  class="grid grid-cols-[1fr_auto] group cursor-pointer rounded-md border border-blue-800 p-4 transition-all duration-300 hover:-translate-y-2"
  href={`/posts/${slug}`}
>
  <p class="title font-bold text-lg">{title}</p>

  <svg
    class="arrow justify-self-end transition-all duration-300 group-hover:translate-x-1"
    width="18"
    height="18"
  >
    <use href="#arrow"></use>
  </svg>

  <time datetime={publishedAt.toISOString()} class="col-span-2 text-xs">
    {formatDate(publishedAt)}
  </time>

  <p class="truncate col-span-2">
    {description}
  </p>
</a>
