---
import Link from "./shared/Link.astro";
import { presentation } from "@/data/presentation";
let { socials } = presentation;
---

<ul role="list" class="flex flex-row items-center gap-4">
  {
    socials.map(({ label, link, image }, index) => (
      <>
        <li>
          <Link href={link} label={label} image={image} />
        </li>

        {socials.length - 1 !== index && <span class="text-lg">|</span>}
      </>
    ))
  }
</ul>
