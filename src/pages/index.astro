---
import { Picture } from "astro:assets";

import Layout from "@/layouts/Layout.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import ProjectListing from "@/components/ProjectListing.astro";
import PostsListing from "@/components/PostsListing.astro";
import WaveEmoji from "@/components/WaveEmoji.astro";

import { presentation } from "@/data/presentation";
import profile from "./_profile.jpg";

const descriptionLines = presentation.description
  .split(". ")
  .map((part, index, array) =>
    index < array.length - 1 ? `${part}.` : part,
  );
---

<Layout
  title="Home"
  description="A minimal portfolio for Gavin Daly, a software developer based in Canada."
>
  <article
    class="flex flex-col gap-10 md:flex-row-reverse md:justify-between md:gap-14 pb-8"
  >
    <div class="w-1/4 md:justify-end">
      <Picture
        src={profile}
        class="rounded-full md:justify-end shadow-md"
        alt="Profile Image"
        widths={[100, 200, 400, profile.width]}
        formats={["webp", "avif"]}
        loading="lazy"
        width="200"
        height="200"
      />
    </div>

    <div class="flex flex-col gap-8">
      <h1 class="text-3xl font-bold">
        {presentation.title}
        <WaveEmoji />
      </h1>

      <h2 class="text-xl md:text-2xl leading-8 space-y-2">
        {descriptionLines.map((line) => (
          <span class="block">{line}</span>
        ))}
      </h2>

      <SocialLinks />
    </div>
  </article>

  <PostsListing />

  <ProjectListing />
</Layout>
