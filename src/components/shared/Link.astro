---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
  label: string;
  isUnderline?: boolean;
  image?: string;
};

const { label, image, isUnderline, ...props } = Astro.props;
---

<a
  href={props.href}
  class:list={{
    ["hover:text-sky-800 dark:hover:text-sky-100 transition cursor-pointer"]: true,
    ["underline decoration-dashed hover:underline-offset-2"]: isUnderline,
  }}
  {...props}
  rel="noreferrer"
  target="_blank"
>
  {
    image ? (
      <img src={image} alt={label} class="h-4 w-4" />
    ) : (
      <span class="text-lg">{label}</span>
    )
  }
</a>
