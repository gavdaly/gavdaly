{
  "name": "gavdaly",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "typecheck": "astro check",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:visual": "playwright test visual",
    "test:e2e:visual:update": "playwright test visual --update-snapshots",
    "lint": "eslint 'src/**/*.{astro,ts,tsx}' --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:md": "markdownlint-cli2",
    "lint:spell": "cspell --no-progress --no-summary '**/*.{md,mdx,astro,ts,tsx}'",
    "lint:links": "remark -q -f .",
    "lint:prune": "ts-prune --error",
    "typecheck:workers": "tsc --noEmit -p tsconfig.workers.json",
    "lint:all": "npm run lint && npm run lint:md && npm run lint:spell && npm run lint:prune",
    "test:lhci": "npm run build && lhci autorun --config=lighthouserc.json",
    "prepare": "husky",
    "astro": "astro",
    "cf:dev": "wrangler pages dev --compatibility-date=2024-12-01",
    "d1:migrate": "wrangler d1 migrations apply your-d1-db",
    "d1:console": "wrangler d1 execute your-d1-db --local --command '.tables'"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/solid-js": "^5.1.0",
    "@astrojs/tailwind": "^6.0.2",
    "astro": "^5.13.7",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "0.8.4",
    "marked": "^16.3.0",
    "solid-js": "^1.9.9",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@cloudflare/workers-types": "^4.20250927.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.49.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.42.0",
    "cspell": "^9.2.1",
    "depcheck": "^1.4.7",
    "eslint": "9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "remark-cli": "^12.0.1",
    "remark-validate-links": "^13.1.0",
    "ts-prune": "^0.10.3"
  },
  "lint-staged": {
    "**/*.{astro,ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "**/*.{md,mdx}": [
      "markdownlint-cli2"
    ],
    "**/*.{md,mdx,astro,ts,tsx}": [
      "cspell --no-progress --no-summary"
    ]
  }
}
